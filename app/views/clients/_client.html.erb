<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movies.last %></td>
    <td><%= link_to "Detalles cliente", client, class: "btn btn-primary" %></td>
    <td><%= link_to "Editar cliente", edit_client_path(client), class: "btn btn-warning" %></td>
    <td><%= button_to "Eliminar cliente", client, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %></td>
  </tr>
</div>

